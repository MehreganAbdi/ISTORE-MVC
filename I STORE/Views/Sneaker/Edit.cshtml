@using Context.Data.Enum;
@using Context.ViewModels;
@model CreateSneakerVM
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="SneakerId" type="hidden" value="@Model.SneakerId" class="form-control" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" value="@Model.Name" class="form-control" placeholder="Enter Name">
        <span asp-validation-for="Name" class="text-danger"></span>
        
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Count">Count</label>
        <input asp-for="Count" type="number" value="@Model.Count" class="form-control" placeholder="count">
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Size">Size</label>
        <input asp-for="Size" type="number" value="@Model.Size" class="form-control" placeholder="Size">
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="number" value="@Model.Price" class="form-control" placeholder="Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Company">Book Category</label>
            <select asp-for="Company" onselect="@Model.Company" asp-items="@Html.GetEnumSelectList<Company>()">
            <option> - - select - - </option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" value="@Model.Image" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br />
    <br />
    <div class="form-group">
        <label asp-for="OFF">OFF</label>
        <input asp-for="OFF" type="number" value="@Model.OFF" class="form-control" placeholder="OFF" >
        <span asp-validation-for="OFF" class="text-danger"></span>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>