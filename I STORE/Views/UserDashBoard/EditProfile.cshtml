@using I_STORE.ViewModels;
@model EditProfVM


@{
    ViewData["Title"] = "Edit User";
}



<form method="post" asp-action="EditProfile">
    <input type="hidden" value="Id" id="Id" asp-for="Id" />
    <div class="form-group">
        <label asp-for="UserName"> User Name </label>
        <input asp-for="UserName" type="text" value="@Model.UserName" class="form-control" placeholder="UserName">
        <span asp-validation-for="UserName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Address"> Address </label>
        <input asp-for="Address" type="text" value="@Model.Address" class="form-control" placeholder="Address">
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"> Phone Number </label>
        <input asp-for="PhoneNumber" type="text" value="@Model.PhoneNumber" class="form-control" placeholder="PjoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div><br /><br />

    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>